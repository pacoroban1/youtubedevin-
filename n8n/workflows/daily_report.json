        "telegramApi": {
          "id": "1",
          "name": "Telegram"
        }
      }
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "UPDATE daily_reports SET report_json = '{{ JSON.stringify($json.report) }}' WHERE report_date = CURRENT_DATE",
        "options": {}
      },
      "id": "save-report",
      "name": "Save Report",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.3,
      "position": [850, 400],
