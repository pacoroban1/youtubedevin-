# Amharic Recap Autopilot - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Google Gemini API (Required for EVERYTHING: Script, TTS, Image)
# ===========================================
# Get this from Google AI Studio: https://aistudio.google.com/
# Must have access to gemini-2.0-flash, gemini-2.0-flash-exp-image-generation (or imagen), and TTS models.
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# YouTube Data API (Optional but recommended for auto-upload)
# ===========================================
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=
YOUTUBE_API_KEY=

# ===========================================
# Script Generation Settings
# ===========================================
# Narrator persona for style pass
NARRATOR_PERSONA=futuristic captain
# Beat size for recap translation/stylization (seconds per beat)
SCRIPT_BEAT_SECONDS=20
SCRIPT_MAX_BEATS=60

# ===========================================
# Translation (Optional)
# ===========================================
# If blank, Gemini handles translation internally.
# Supported values: google, libretranslate, none (or blank)
TRANSLATION_PROVIDER=
GOOGLE_CLOUD_API_KEY=
LIBRETRANSLATE_URL=
LIBRETRANSLATE_API_KEY=

# ===========================================
# Thumbnail Settings
# ===========================================
# ZThumb URL (Optional). If blank, uses Gemini/Imagen.
ZTHUMB_URL=
# Must remain false to avoid OpenAI costs.
ALLOW_THUMBNAIL_FALLBACK_TO_OPENAI=false

# ===========================================
# Database
# ===========================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=autopilot
POSTGRES_PASSWORD=autopilot_secret_password
POSTGRES_DB=amharic_recap

# ===========================================
# Other (Optional)
# ===========================================
OPENAI_API_KEY=
AZURE_SPEECH_KEY=
ELEVENLABS_API_KEY=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHANNEL_ID=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# ===========================================
# N8N
# ===========================================
# n8n basic auth (docker-compose.yml maps these into N8N_BASIC_AUTH_* inside the container)
N8N_USER=admin
N8N_PASSWORD=change_this_password

# Optional (recommended on a VM): set these so webhook URLs and links are correct.
# Examples:
#   N8N_HOST=203.0.113.10
#   WEBHOOK_URL=http://203.0.113.10:5678/
#   TIMEZONE=America/Los_Angeles
N8N_HOST=
WEBHOOK_URL=
TIMEZONE=UTC

# ===========================================
# Optional: Caddy reverse proxy (infra/gcp/docker-compose.caddy.yml)
# ===========================================
# If you have a domain, set CADDY_SITE=yourdomain.com for automatic HTTPS.
# If you do NOT have a domain, set CADDY_SITE=:80 (HTTP only).
CADDY_SITE=
CADDY_ACME_EMAIL=
# Generate bcrypt hash:
#   docker run --rm caddy:2-alpine caddy hash-password --plaintext 'your_password'
CADDY_BASIC_AUTH_USER=
CADDY_BASIC_AUTH_HASH=
